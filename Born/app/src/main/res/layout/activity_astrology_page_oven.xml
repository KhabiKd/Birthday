<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_astrology"
    tools:context=".Pages.AstrologyPage">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="40dp"
                android:paddingEnd="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:paddingBottom="20dp"
                    android:text="Овен"
                    android:textSize="40sp"
                    android:textStyle="bold"
                    />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitEnd"
                    android:src="@drawable/oven" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Стихия: Огонь"
                        android:padding="15dp"
                        android:textSize="20sp"
                        android:fontFamily="serif"
                        android:layout_weight="1"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:padding="15dp"
                        android:text="Планета: Марс"
                        android:fontFamily="serif"
                        android:layout_weight="1"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Камень: Алмаз"
                        android:padding="15dp"
                        android:textSize="20sp"
                        android:fontFamily="serif"
                        android:layout_weight="1"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:padding="15dp"
                        android:text="Талисман: Молот"
                        android:fontFamily="serif"
                        android:layout_weight="1"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Цвет: Ярко-красный"
                        android:padding="15dp"
                        android:textSize="20sp"
                        android:fontFamily="serif"
                        android:layout_weight="1"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:padding="15dp"
                        android:text="Цветы: Фиалка"
                        android:fontFamily="serif"
                        android:layout_weight="1"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp">
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Идеальная\nсовместимость:"
                        android:padding="15dp"
                        android:paddingEnd="0dp"
                        android:textSize="20sp"
                        android:fontFamily="serif"/>
                    <TextView
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="\nСтрелец"
                        android:padding="15dp"
                        android:textSize="20sp"
                        android:fontFamily="serif"
                        android:textStyle="bold"
                        android:textColor="@color/orange_text"/>
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="serif"
                android:paddingStart="15dp"
                android:text="Характеристика Овнов"
                android:textSize="30sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:paddingStart="15dp"
                android:lineSpacingExtra="5dp"
                android:text="Овен - занимает главенствующее положение в зодиакальном круге."
                android:textSize="20sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:paddingStart="15dp"
                android:paddingTop="9dp"
                android:lineSpacingExtra="5dp"
                android:text="Овны независимы личности с нетерпиливым характером. Ими движут амбициозные цели, способные потянуть других людей за собой. Они не могут долго сожалеть о расстовании с партнером и не сожалеют о прошлом, достаточно прямолинейны.\nОвны обладают романтическим характером, идеальные партнеры - те, которые смогуг разделить их обиды и эмоциональные всплески."
                android:textSize="20sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:fontFamily="serif"
                android:paddingStart="15dp"
                android:layout_marginBottom="10dp"
                android:text="Союзы с Овном"
                android:textSize="30sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:paddingStart="15dp"
                android:lineSpacingExtra="5dp"
                android:text="Наилучшим партнером является Стрелец. Вы сможете друг друга поддержать в нелёгких ситуациях, а также разделять ваши авантюрные, порой даже безумные решения!\nВ союзе со Львом - вы будете парой, идущей к своим целям уверенно и быстро, так как вы оба являетесь лидерами, однако у этой стороны есть и минус - вам придется идти на уступки.\nОвны отлично ладят с представителями воздушной стихии, а именно Близнецы и Водолеи. Как известно, воздух усиливает огонь)"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:fontFamily="serif"
                android:paddingStart="15dp"
                android:layout_marginBottom="10dp"
                android:text="Трудные отношения"
                android:textSize="30sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:paddingStart="15dp"
                android:lineSpacingExtra="5dp"
                android:text="Неудачные отношения могут ожидать вас с Рыбами, Раком и Козерогом. Уж слишком большая разница в прироритетах и скорости жизни. Но в жизни бывают и исключения, так что дерзайте ;D"
                android:textSize="20sp" />

        </LinearLayout>


</ScrollView>